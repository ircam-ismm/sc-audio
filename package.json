{
  "name": "@ircam/sc-audio",
  "version": "0.0.0",
  "contributors": [
    "Benjamin Matuszewski",
    "Jean-Philippe Lambert"
  ],
  "description": "Web Audio synthesizers, effects and utilities",
  "license": "BSD-3-Clause",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ircam-ismm/sc-utils.git"
  },
  "exports": {
    ".": {
      "module": "./src/index.js",
      "node": "./src/index.js",
      "types": "./types/index.d.ts"
    },
    "./*.js": {
      "module": "./src/*.js",
      "node": "./src/*.js",
      "types": "./types/*.d.ts"
    }
  },
  "scripts": {
    "api": "jsdoc-to-readme --src src/*.js --heading-depth 2",
    "build": "npx esbuild src/index.js --bundle --minify --format=esm --outfile=build/bundle.js",
    "lint": "eslint ./src/*.js",
    "preversion": "npm run build && npm run api && npm run types && git add -A && git commit -m 'docs: rebuild' --allow-empty",
    "test": "mocha tests/*.spec.js",
    "types": "rm -rf types && tsc"
  },
  "devDependencies": {
    "@ircam/eslint-config": "^1.3.0",
    "chai": "^4.3.8",
    "eslint": "^8.48.0",
    "jsdoc-to-readme": "^2.0.0",
    "mocha": "^10.2.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@ircam/sc-utils": "^1.10.1",
    "isomorphic-web-audio-api": "^1.0.2"
  }
}
